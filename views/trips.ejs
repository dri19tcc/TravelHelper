<%- include('./_layout') %>


<form class="create-trip" action="trips/new" method="post">
  <h3>Create a New Trip</h3>
  <input type="text" name="name" placeholder="Trip Name" >

  <input class="btn btn-secondary" type="submit" value="New Trip">
</form>

<h3 class="left">Your Trips (<%= trips.length %>)</h3>

<div class="row">
  <% for(var i=0; i < trips.length; i++) { %>
    <div class="col-md-4">
      <div class="col-md-12 card">
        <h4>
          <a href='<%= "/trips/" + trips[i].tripID %>'><%= trips[i].tripName %></a>
        </h4>
        <a href='<%= "/trips/" + trips[i].tripID %>'><img src="/images/greenlake_map.png" width="250px"/></a>
        <p>
          Number of Activities: <%= activityCounts[trips[i].tripID].count %>
        </p>
      </div>
    </div>
  <% } %>
</div>

<%- include('./_footer') %>
